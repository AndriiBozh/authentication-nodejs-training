<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />

    <title>Login</title>
  </head>
  <body>
    <div class="container container-login">
      <div class="header">Login </header>
      
      <form action="/login" method="post" class="form login-form">
        <input
          type="email"
          name="username"
          placeholder="Your email"
          value="{{email}}"
          required
        />
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <input class="form-btn login-btn" type="submit" value="Login" />
      </form>
      {{#if message}}
        <div class="flash-message {{message.category}}" id="flash-msg">
          <p class="flash-message-text">
            {{message.text}}</p>
          <button
            class="close-flash-msg-btn"
            onclick="getElementById('flash-msg').classList.add('hide')"
          >&times;</button>
        </div>
      {{/if}}
    </div>
{{! remove flash message if user doesn't do it during 8 sec }}
    <script type="text/javascript">window.setTimeout(() => { if
      (document.getElementById('flash-msg'))
      document.getElementById('flash-msg').classList.add('hide');}, 8000);
    </script>
  </body>
</html>